<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#039BE5"
    tools:context="com.example.android.theweatherapp.MainActivity">


    <TextView
        android:id="@+id/cityText"
        android:textColor="#FFFFFF"
        android:layout_marginTop="50sp"
        android:layout_centerHorizontal="true"
        android:text="San Jose,USA"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/thumnailIcon"
        android:layout_below="@+id/cityText"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/tempText"
        android:layout_below="@+id/cityText"
        android:text="12 Deg"
        android:layout_marginTop="25dp"
        android:textSize="42sp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/windText"
        android:textColor="#fff"
        android:text="Wind"
        android:textSize="16sp"
        android:layout_below="@id/thumnailIcon"
        android:textStyle="normal"
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cloudText"
        android:text="Cloud"
        android:textColor="#fff"
        android:layout_marginTop="5dp"
        android:layout_below="@id/windText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pressureText"
        android:textColor="#fff"
        android:textSize="16sp"
        android:text="Pressure"
        android:layout_marginTop="5dp"
        android:layout_below="@id/cloudText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/humidText"
        android:textColor="#fff"
        android:textSize="16sp"
        android:text="Humidity"
        android:layout_marginTop="5dp"
        android:layout_below="@id/pressureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/riseText"
        android:textColor="#fff"
        android:textSize="16sp"
        android:text="Sunrise"
        android:layout_marginTop="5dp"
        android:layout_below="@id/humidText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/setText"
        android:textColor="#fff"
        android:textSize="16sp"
        android:text="Sunset"
        android:layout_marginTop="5dp"
        android:layout_below="@id/riseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/updateText"
        android:textColor="#fff"
        android:textSize="26sp"
        android:text="Last updated"
        android:layout_marginTop="5dp"
        android:layout_below="@id/setText"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
